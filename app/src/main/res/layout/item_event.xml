<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="com.example.jfeventos.model.Event" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                bind:picassoLoad="@{event.image}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="SÁB"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="27"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#E35093"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E35093"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="JUN"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/component"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/cardview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventCityState"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Manaus/AM"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="#E35093"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/eventTitle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Feira de Doaçao de Animais na Redenção"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="@{event.title}" />

                    <TextView
                        android:id="@+id/eventPrice"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="A partir de R$ 00,00"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="#E35093"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="@{`A partir de R$ ` + event.price}" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/eventArrow"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/cardview"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_arrow_to_right"
                    android:textAppearance="?attr/textAppearanceBody2" />

            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>