<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardEventDate"
    android:layout_width="100dp"
    android:layout_height="85dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintEnd_toStartOf="@+id/cardviewxx"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/app_bar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/dayOfTheWeek"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="SÁB"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayEvent"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/dayOfTheWeek"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="27"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/colorEvent"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorEvent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monthTheEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="JUN"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>